{# List all player in decroissant points order for the table (1st player with most points and last player with less points) #}
<section id="scores" class="flex justify-center text-lg">
  <table class="ranking">
    <thead>
      <tr>
        <th class="border-solid border-2" scope="col">Position</th>
        <th class="border-solid border-2" scope="col">Player</th>
        <th class="border-solid border-2" scope="col">Score</th>
        <th class="border-solid border-2" scope="col">TOP100</th>
        <th class="border-solid border-2" scope="col">TOP50</th>
      </tr>
    </thead>
    <tbody>
      {% for score in scores %}
        <tr>
          {% if loop.first %} {# First place is silver #}
          <td class="bg-slate-300 text-center w-20 p-2 border-solid border-2">{{ score.position }}</td>
          <td class="bg-slate-300 text-left w-32 p-2 border-solid border-2">{{ score.player.pseudo }}</td>
          <td class="bg-slate-300 text-right p-2 border-solid border-2">{{ score.value|number_format(0, '.', ' ') }}</td>
          <td class="bg-slate-300 text-right p-2 border-solid border-2">{{ score.top100points }}</td>
          <td class="bg-slate-300 text-right p-2 border-solid border-2 {% if score.top50points == 0 %} text-gray-300 {% endif %}">{{ score.top50points }}</td>
          {% elseif loop.index == 2 %} {# Second place is bronze #}
          <td class="bg-orange-200 text-center w-20 p-2 border-solid border-2">{{ score.position }}</td>
          <td class="bg-orange-200 text-left w-32 p-2 border-solid border-2">{{ score.player.pseudo }}</td>
          <td class="bg-orange-200 text-right p-2 border-solid border-2">{{ score.value|number_format(0, '.', ' ') }}</td>
          <td class="bg-orange-200 text-right p-2 border-solid border-2">{{ score.top100points }}</td>
          <td class="bg-orange-200 text-right p-2 border-solid border-2 {% if score.top50points == 0 %} text-gray-300 {% endif %}">{{ score.top50points }}</td>
          {% elseif loop.index == 3 %} {# Third place is oxydized copper #}
          <td class="bg-emerald-100 text-center w-20 p-2 border-solid border-2">{{ score.position }}</td>
          <td class="bg-emerald-100 text-left w-32 p-2 border-solid border-2">{{ score.player.pseudo }}</td>
          <td class="bg-emerald-100 text-right p-2 border-solid border-2">{{ score.value|number_format(0, '.', ' ') }}</td>
          <td class="bg-emerald-100 text-right p-2 border-solid border-2">{{ score.top100points }}</td>
          <td class="bg-emerald-100 text-right p-2 border-solid border-2 {% if score.top50points == 0 %} text-gray-300 {% endif %}">{{ score.top50points }}</td>
          {% else %}
          <td class="text-center w-20 p-2 border-solid border-2">{{ score.position }}</td>
          <td class="text-left w-32 p-2 border-solid border-2">{{ score.player.pseudo }}</td>
          <td class="text-right p-2 border-solid border-2">{{ score.value|number_format(0, '.', ' ') }}</td>
          <td class="text-right p-2 border-solid border-2">{{ score.top100points }}</td>
          <td class="text-right p-2 border-solid border-2 {% if score.top50points == 0 %} text-gray-300 {% endif %}">{{ score.top50points }}</td>
          {% endif %}
        </tr>
      {% endfor %}
    </tbody>
  </table>
</section>
