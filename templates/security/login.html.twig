{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}


    <form method="post" class="flex items-center justify-center w-full h-full flex-col fixed top-0 left-0">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        
        <div class="w-1/3 flex flex-col gap-2 text-lg justify-center">
            <div class="flex flex-row justify-between items-center w-full">
                <label for="username">Username</label>
                <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control border-solid border-2 rounded border-gray-500 p-2" autocomplete="username" required autofocus>
            </div>

            <div class="flex flex-row justify-between items-center w-full">
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="form-control border-solid border-2 rounded border-gray-500 p-2" autocomplete="current-password" required>
            </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

            <div class="flex flex-row justify-center w-full h-full my-2">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-1/3" type="submit">
                    Sign in
                </button>
            </div>
        </div>
    </form>
{% endblock %}
