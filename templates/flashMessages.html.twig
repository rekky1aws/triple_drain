
<div class="fixed bottom-8 right-0 p-4 flex flex-col-reverse justify-end align-end gap-2 max-h-1/3">
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
</div>

<style>
@keyframes flashmove {
    0% {transform: translate(200%, 0);}
    10%, 90% {transform: translate(0, 0);}
    100% {display: none;}
}

.flash {
    border-radius: 0.75rem;
    transform: translate(200%, 0);
    background-color: #FFFFFF;
    transition:ease-in-out 0.2s;
    padding: 0.5rem;
    animation-name: flashmove;
    animation-duration: 5s;
}
</style>

<script>
const flashMessages = document.querySelectorAll('.flash');
let count = 0.1;
flashMessages.forEach((elt) => {
    elt.style.animationDelay = `${count}s`;
    count += 0.1;
});
</script>